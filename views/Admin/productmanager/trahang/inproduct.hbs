<main>
    <div class="swiper-slide swiper-lazy swiper-lazy-loaded swiper-slide-active" style="height:550px;
                        
                        background-repeat: no-repeat;
                        background-attachment: fixed;
                        background-size:100%;
                        display: flex; justify-content: center;">
        <div style="width: 50%;">
            <form action="/admin/quanlisanpham/trahang/adddontrahang" , method="POST">
                <div class="card">
                    <!--Header-->
                    <div class="header p-3 mt-3 peach-gradient">
                        <div class="row d-flex justify-content-center">
                            <h3 class="white-text font-weight-bold">Trả Hàng</h3>
                        </div>
                    </div>
                    <span style="color: rgb(136, 136, 252); margin-left:25px;">{{success}}</span>
                    <div class="card-body mx-1 mt-1">
                    </div>
                    <span style="color: rgb(204, 0, 10); margin-left:25px;">{{thongbao}}</span>
                    <div class="card-body mx-1 mt-1">
                        <!--Body-->

                        <div class="md-form">
                            <div style="padding-top: 20px; margin-bottom: 0px;padding-bottom: 20px;">
                                <label for="">Nhân Viên </label>
                                <select name="nhanvien">
                                    {{#each nhanvien}}
                                    <option value="{{MaNhanVien}}">{{TenNhanVien}}</option>
                                    {{/each}}
                                </select>
                            </div>
                    
                        </div>
                        <div class="md-form">
                            <div style="padding-top: 20px; margin-bottom: 0px;padding-bottom: 20px;">
                                <label for="">Nhà Cung Cấp</label>
                                <select name="nhacungcap">
                                    {{#each nhacungcap}}
                                    <option value="{{MaNCC}}">{{TenNCC}}</option>
                                    {{/each}}
                                </select>
                            </div>
                        </div>
                        <div class="md-form">
                            <label for="Form-name">Số lượng</label></br>
                            <input type="number" id="Form-name" name="soluong" class="form-control">
                        </div>
                        <div class="md-form">
                            <label for="description">Lí do nhập hàng</label></br>

                            <textarea id="editor" class="form-control md-textarea" name="lidonhaphang"
                                rows="5"></textarea>
                        </div>
                        <!--Grid row-->
                        <div class="row">
                            <!--Grid column-->
                            <div class="text-center" style="margin-left:20px;margin-top:20px;">
                                <div class="text-center">
                                    <button type="submit" class="btn btn-danger">Thêm Nhập hàng</button>
                                </div>
                            </div>

                            <div class="text-center" style="margin-left:20px;margin-top:20px;">
                                <div class="text-center">
                                    <a class="btn " href="/admin/quanlisanpham/trahang">Hủy bỏ</a>
                                </div>
                            </div>

                            <!--Grid column-->
                        </div>
                        <!--Grid row-->
                    </div>
            </form>

        </div>
    </div>
</main>