<div class="container pt-5 pb-5">
    <div class="row text-center">

    </div>
    <div class="row">
        <h2>
            Quản lí quảng cáo USER
        </h2>
       <div class="container pt-5 pb-5">
    <div class="row text-center">
         <span>
            Lịch Sử Gửi Quảng Cáo
        </span>
    </div> 
    <div class="row">
            <table class="table table-striped table-hover table-bordered">
                <thead>
                    <tr>
                        <th scope="col" class="text-center">Mã KH</th>
                        <th scope="col" class="text-center">Tên KH</th>
                        <th scope="col" class="text-center">Email</th>
                        <th scope="col" class="text-center">SĐT</th>
                        <th scope="col" class="text-center">Ngày gửi QC</th>
                        <th scope="col" class="text-center">Địa chỉ</th>
                        <th><form method="GET" action="/admin/Addproduct">
                                <button name="products" class="btn btn-sm btn-danger ">
                                   Thêm Sản Phẩm
                                </button>
                                </form></th>
                    </tr>
                </thead>
                <tbody>
                    {{#each userqc}}
                        <tr class="product" data-id="{{MaKH}}">
                            <th scope="row" class="text-center">{{MaKH}}</th>
                            <td class="text-center">{{TenKH}}</td>
                            <td>{{emailKH}}</td>
                            <td>{{SoDienThoai}}</td>
                            <td class="text-center">{{NgayGuiQuangCao}}</td>
                            <td class="text-center">{{DiaChi}}</td>
                            <td class="text-right">
                                <form method="GET" onclick="comtet({{ProID}})">
                                <button name="products" class="btn btn-sm btn-danger ">
                                    <i class="fas fa-trash-alt" aria-hidden="true"></i>
                                </button>
                                </form>
                            </td>
                        </tr>
                    {{/each}}
                </tbody>
            </table>

    </div>
</div>
    </div>
</div>
<script>
  function comtet(id)
  {
    var result=confirm("Bạn có thực sự muốn xóa?");
    if(result)
    {
      window.location = `/admin/qlsp/delete/` + id;
            
    }
    else{
       window.location = `/admin/qlsp`;
    }
  }
</script>